<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jantd.modules.assessment.mapper.PersonnelSettingsMapper">
    <resultMap id="personnelSettings" type="cn.jantd.modules.assessment.entity.PersonnelSettings" >
        <result column="id" property="id" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
        <result column="equip" property="equip" jdbcType="VARCHAR"/>
        <result column="position" property="position" jdbcType="VARCHAR"/>
        <result column="specialities" property="specialities" jdbcType="VARCHAR"/>
        <result column="staff_group" property="staffGroup" jdbcType="VARCHAR"/>
        <result column="staff_type" property="staffType" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="queryPageList" parameterType="int"  resultMap="personnelSettings">
	   select * from t_sys_staff ORDER BY id desc LIMIT #{pageNo}, 10;
	</select>

    <select id="queryPageTotal" resultType="int">
	   SELECT COUNT(*) FROM t_sys_staff
	</select>

    <insert id="addPersonnel">
        insert into t_sys_staff (
        name,
        staff_group,
        password
        ) VALUES
        (
        #{name},
        #{staffGroup},
        #{password}
        )
    </insert>
</mapper>
